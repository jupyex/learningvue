<script setup>
import { ref } from 'vue'

const titleClass = ref('red')

function change(){
  titleClass.value = 'blue'
}
</script>

<template>
  <h1 v-bind:class="titleClass">Make me red</h1> <!-- add dynamic class binding here -->
  <button v-on:click="change">
    Change me to blue
  </button>
</template>

<style>
.red {
  color: red;
}
  .blue {
    color: blue
  }
</style>
